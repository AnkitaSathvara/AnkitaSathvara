<body>
  <h1>API Table</h1>
  
  <table>
    <tr>
      <th>API</th>
      <th>API Description</th>
      <th>Action</th>
    </tr>
    <tr>
      <td>Country Info</td>
      <td>Get information about a specific country</td>
      <td>
        <input type="text" id="countryCode" placeholder="Country Code">
        <button onclick="getCountryInfo()">Get Country Info</button>
      </td>
    </tr>
    <tr>
      <td>Earthquakes</td>
      <td>Retrieve information about recent earthquakes</td>
      <td>
        <input type="text" id="north" placeholder="North">
        <input type="text" id="south" placeholder="South">
        <input type="text" id="east" placeholder="East">
        <input type="text" id="west" placeholder="West">
        <button onclick="getEarthquakes()">Get Earthquakes</button>
      </td>
    </tr>
    <tr>
      <td>Find Nearest Address</td>
      <td>Find the nearest address to a given location</td>
      <td>
        <input type="text" id="latitude" placeholder="Latitude">
        <input type="text" id="longitude" placeholder="Longitude">
        <button onclick="findNearestAddress()">Find Nearest Address</button>
      </td>
    </tr>
  </table>
  
  <script>
    // Replace with your actual GeoNames API username
    const username = 'YOUR_GEO_NAMES_USERNAME';

    function getCountryInfo() {
      // Get the country code entered by the user
      var countryCode = document.getElementById('countryCode').value;
      
      // Make the API call using the GeoNames Country Info API
      var apiUrl = `http://api.geonames.org/countryInfoJSON?country=${countryCode}&username=${username}`;
      // Perform the necessary fetch or AJAX call to apiUrl
      console.log('Calling Country Info API');
    }
    
    function getEarthquakes() {
      // Get the earthquake parameters entered by the user
      var north = document.getElementById('north').value;
      var south = document.getElementById('south').value;
      var east = document.getElementById('east').value;
      var west = document.getElementById('west').value;
      
      // Make the API call using the GeoNames Earthquakes API
      var apiUrl = `http://api.geonames.org/earthquakesJSON?north=${north}&south=${south}&east=${east}&west=${west}&username=${username}`;
      // Perform the necessary fetch or AJAX call to apiUrl
      console.log('Calling Earthquakes API');
    }
    
    function findNearestAddress() {
      // Get the latitude and longitude values entered by the user
      var latitude = document.getElementById('latitude').value;
      var longitude = document.getElementById('longitude').value;
      
      // Make the API call using the GeoNames Find Nearest Address API
      var apiUrl = `http://api.geonames.org/findNearestAddressJSON?lat=${latitude}&lng=${longitude}&username=${username}`;
      // Perform the necessary fetch or AJAX call to apiUrl
      console.log('Calling Find Nearest Address API');
    }
  </script>
